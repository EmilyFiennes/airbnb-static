<body>

    <!-- Your banner code -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(36,101,100,0.6) 0%, rgba(36,20,1,0.6) 80%), url('images/paris.jpg');">
      <div class="banner-content">
        <h1>WELCOME HOME</h1>
        <p>Rent unique places from local hosts in 190+ countries</p>
        <form class="form-inline">
          <div class="form-group">
            <input type="text" class="form-control input-lg" id="check_in" placeholder="Check in">
          </div>
          <div class="form-group">
            <input type="text" class="form-control input-lg" id="check_in" placeholder="Check out">
          </div>
          <select class="form-control input-lg">
            <option value="1">1 person</option>
            <option value="2">2 people</option>
            <option value="3">3 people</option>
            <option value="4">4 people</option>
            <option value="5">5 people</option>
          </select>
          <button type="submit" class="btn btn-info btn-lg">Search</button>
        </form>
      </div>
    </div>

    <!-- Your features code -->
    <div class="container text-center padded features">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%=image_tag "globe.png", alt: "globe icon", class: "img-circle" %>
          <h2>Discover the world</h2>
          <p>The earth is your new home</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%=image_tag "dollar.png", alt: "dollar icon", class: "img-circle" %>
          <h2>Pay online</h2>
          <p>No cash issues anymore</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "beer.png", alt: "beer icon", class: "img-circle"%>
          <h2>Meet people</h2>
          <p>Discover new culture and lifestyle</p>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "heart.png", alt: "heart icon", class: "img-circle"%>
          <h2>Share and love</h2>
          <p>Join a community you will love</p>
        </div>
      </div>
    </div>

    <!-- Your cards code -->
    <div class="wrapper-grey padded">
      <div class="container">
        <div class="row">
        <div class="col-xs-12 col-sm-4">
        <%link_to "#", class: "card-link" do%>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
            <% end %>
          <div class="card-category">London</div>
          <div class="card-description">
            <h2>Alice's home</h2>
            <p>London calling</p>
          </div>
          <%= image_tag "alice.jpg", alt: "alice photo", class: "card-user avatar"%>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
        <%link_to "#", class: "card-link" do%>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">
            <% end %>
          <div class="card-category">Brussels</div>
          <div class="card-description">
            <h2>European buzz</h2>
            <p>Rooftop abode</p>
          </div>
          <%= image_tag "emily.jpg", alt: "emily photo", class: "card-user avatar"%>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4">
        <%link_to "#", class: "card-link" do%>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
            <% end %>
          <div class="card-category">Paris</div>
          <div class="card-description">
            <h2>Pierre's appartment</h2>
            <p>Parisien charm in the 9Ã¨me</p>
          </div>
          <%=image_tag "pierre.jpg", alt: "pierre photo", class: "card-user avatar"%>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- Your newsletter code -->
    <div class="text-center padded" id="newsletter">
      <h2>Get news from us</h2>
      <p>Leave us your email and get news from us</p>
      <div class="form-group">
        <form action="#" class="form-inline">
          <input type="email" class="form-control" placeholder="youremail@here.com">
          <input type="submit" value="Send me news" class="btn btn-primary">
        </form>
      </div>
    </div>

    <!-- Your map code -->
    <div id="map" style="width: 100%; height: 400px;"></div>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBz-IJkDokL095VJxr2ooiLXm594QWUFxc"></script>
    <script type="text/javascript">
      var myLatlng = new google.maps.LatLng(48.882663, 2.332304);

      var myOptions = {
        zoom: 16,
        center: myLatlng,
        scrollwheel: false,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        styles: [{"featureType":"administrative","elementType":"all","stylers":[{"visibility":"on"},{"lightness":33}]},{"featureType":"landscape","elementType":"all","stylers":[{"color":"#f2e5d4"}]},{"featureType":"poi.park","elementType":"geometry","stylers":[{"color":"#c5dac6"}]},{"featureType":"poi.park","elementType":"labels","stylers":[{"visibility":"on"},{"lightness":20}]},{"featureType":"road","elementType":"all","stylers":[{"lightness":20}]},{"featureType":"road.highway","elementType":"geometry","stylers":[{"color":"#c5c6c6"}]},{"featureType":"road.arterial","elementType":"geometry","stylers":[{"color":"#e4d7c6"}]},{"featureType":"road.local","elementType":"geometry","stylers":[{"color":"#fbfaf7"}]},{"featureType":"water","elementType":"all","stylers":[{"visibility":"on"},{"color":"#acbcc9"}]}]
      };

      var map = new google.maps.Map(document.getElementById('map'), myOptions);
      var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title: "You are here!"
      });
    </script>

    <!-- Your footer code -->

    <!-- Including Bootstrap JS (with its jQuery dependency) so that dynamic components work -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
