
<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path flat.picture %>'); height: 50vh; background-position: center;">
</div>

<div id="header-flat">
  <div  class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-5 col-sm-offset-1">
          <div class="card-profile">
            <div class="card-profile-picture text-center">
              <%= image_tag flat.owner_picture, class: "img-circle" %>
              <p><%= flat.owner_name %></p>
            </div>
          </div>
      </div>
      <div class="col-xs-12 col-sm-5">
        <div class="card-profile-details">
          <h2><%= flat.name %></h2>
          <p><%= flat.city %></p>

          <% flat.rating.times do %>
            <i class ="fa fa-star"></i>
          <% end %>

          <% (5-flat.rating).times do %>
            <i class ="fa fa-star-o"></i>
          <% end %>
      </div>
      </div>
    </div>
  </div>
</div>


